<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <Button
            android:id="@+id/cheese_button"
            android:layout_width="113dp"
            android:layout_height="45dp"

            android:onClick="addCheese"
            android:text="Cheese"
            android:layout_marginStart="44dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="37dp" />

        <Button
        android:id="@+id/rice_button"
        android:layout_width="105dp"
        android:layout_height="45dp"
        android:onClick="addRice"
        android:text="Rice"
            android:layout_marginStart="44dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="37dp" />

    <Button
        android:id="@+id/bread_button"
        android:layout_width="106dp"
        android:layout_height="44dp"
        android:onClick="addBread"
        android:text="Bread"
        android:layout_marginStart="44dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="37dp" />

    <Button
        android:id="@+id/egg_button"
        android:layout_width="103dp"
        android:layout_height="48dp"
        android:onClick="addEgg"
        android:text="Egg"
        android:layout_marginStart="44dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="37dp" />

    <Button
        android:id="@+id/butter_button"
        android:layout_width="110dp"
        android:layout_height="43dp"
        android:onClick="addButter"
        android:text="Butter"
        android:layout_marginStart="44dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="37dp" />

    <Button
        android:id="@+id/milk_button"
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:onClick="addMilk"
        android:text="Milk"
        android:layout_marginStart="44dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="37dp" />

    <Button
        android:id="@+id/carrot_button"
        android:layout_width="113dp"
        android:layout_height="46dp"
        android:onClick="addCarrot"
        android:text="Carrot"
        android:layout_marginStart="44dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="37dp" />

        <Button
            android:id="@+id/water_button"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="40dp"
            android:onClick="addWater"
            android:text="Water"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="37dp" />

    <Button
        android:id="@+id/grapes_button"
        android:layout_width="113dp"
        android:layout_height="42dp"
        android:onClick="addGrape"
        android:text="Grapes"
        android:layout_marginStart="44dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="37dp" />

    <Button
        android:id="@+id/cookies_button"
        android:layout_width="103dp"
        android:layout_height="46dp"
        android:onClick="addCookies"
        android:text="Cookies"
        android:layout_marginStart="44dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="37dp" />
    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>